{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "types": [
            "node",
            "webpack-env"
        ],
        "paths": {
            "@/*": [
                "resources/ts/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "typeRoots": [
            "./resources/ts/@types"
        ]
    },
    "include": [
        "resources/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
